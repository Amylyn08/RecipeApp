<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:SplankUi.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        xmlns:views="clr-namespace:SplankUi.Views"
        x:Class="SplankUi.Views.LoginView"
        x:DataType="vm:LoginViewModel"
        Icon="/Assets/avalonia-logo.ico"
        Title="SplankUi">
    <Design.DataContext>
        <vm:LoginViewModel/>
    </Design.DataContext>
    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
        <TextBlock FontSize="24" Text="{Binding WelcomeMessage}"/>

        <TextBlock Margin="0 10" FontSize="18">Username:</TextBlock>
        <TextBox Watermark="Enter username"/>
        
        <TextBlock Margin="0 10" FontSize="18">Password:</TextBlock>
        <TextBox Watermark="Enter password" PasswordChar="*" AcceptsReturn="False"/>
    
    </StackPanel>
</Window>
