<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="RecipeAppUI.Views.DashboardView"
             xmlns:vm="using:RecipeAppUI.ViewModels"
			 x:DataType="vm:DashboardViewModel">
    <DockPanel>

        <!-- Navigation on top -->
        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Background="LightGray" Margin="0,0,0,10">
            <!-- Your navigation buttons or tabs here -->
            <Button Content="Home" Margin="5"/>
            <Button Content="Recipes" Margin="5"/>
            <Button Content="Settings" Margin="5"/>
            <Button Content="Log Out" Margin="5"
				    x:CompileBindings="False" 
                    Command="{Binding $parent[Window].DataContext.ChangeToHomeViewCommand}" />
        </StackPanel>

        <!-- Textbox with search features -->
        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Margin="0,0,0,10">
            <TextBox Width="200" Margin="5" VerticalContentAlignment="Center" Watermark="Search..."/>
            <Button Content="Search" Margin="5"/>
        </StackPanel>

        <!-- Main views -->
        <StackPanel DockPanel.Dock="Left" Orientation="Vertical" Width="200">
            <!-- Navigation view -->
            <Button Content="View 1" Margin="5"/>
            <Button Content="View 2" Margin="5"/>
            <!-- Add more navigation buttons or tabs as needed -->
        </StackPanel>

        <!-- Main content area -->
        <StackPanel DockPanel.Dock="Right" Margin="10">
            <!-- Bigger view for list views -->
            <TextBlock Text="List View" FontSize="18" FontWeight="Bold" Margin="0,0,0,10"/>
            <!-- Your list view content here -->
            <ListBox>
                <ListBoxItem Content="Item 1"/>
                <ListBoxItem Content="Item 2"/>
                <!-- Add more list items as needed -->
            </ListBox>

            <!-- Smaller view for other content -->
            <TextBlock Text="Other View" FontSize="18" FontWeight="Bold" Margin="0,20,0,10"/>
            <!-- Your other view content here -->
            <TextBlock Text="Some content for the other view..." Margin="0,0,0,10"/>
        </StackPanel>
    </DockPanel>
</UserControl>
